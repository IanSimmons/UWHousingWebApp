@model Housing.WebApp.Models.CheckOutEquipmentModel
@{
    ViewBag.Title = "Check Out Equipment";
}

<h2>Check Out Equipment</h2>

@using (Html.BeginForm("NewCheckOut", "Checkout", FormMethod.Post))
{
<div class="form-horizontal">

    <!--START of Equipment form field -->
    <div class="form-group">
        <label for="lstEquipment" class="col-sm-2 control-label">Available Equipment:</label>
        <div class="col-sm-10">
            <select id="lstEquipment" class="form-control" name="Equipment" size="7">
                @foreach (var equipment in Model.Equipment)
                {
                    <option value="@equipment.EquipmentID">@equipment.Equipment</option>
                }
            </select>
        </div>
    </div>
    <!--END of Equipment form field -->
    <!--START of StudentID form field -->
    <div class="form-group">
        <label for="txtStudentID" class="col-sm-2 control-label">Student ID:</label>
        <div class="col-sm-10">
            <input id="txtStudentID" name="StudentID" type="text" placeholder="9071111111" class="form-control" />
        </div>
    </div>
    <!--END of StudentID form field -->
    <!-- START Submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-primary">Check Out Equipment</button>
        </div>
        <div class="col-md-offset-1 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-default">Cancel</button>
        </div>
    </div>
    <!-- END Submit button-->
</div>
        }
