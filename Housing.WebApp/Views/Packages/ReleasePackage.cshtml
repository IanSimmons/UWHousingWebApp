@model Housing.WebApp.Models.ReleasePackageModel
@{
    ViewBag.Title = "Log Package";
}

<h2>Release Package</h2>

@using (Html.BeginForm("NewReleasePackage", "Packages", FormMethod.Post))
{
    <div class="form-horizontal">
        <!--START of Packages form field -->
        <div class="form-group">
            <label for="lstPackage" class="col-sm-2 control-label">Package:</label>
            <div class="col-sm-10">
                <select id="lstPackage" class="form-control" name="Package" size="7">
                    @foreach (var package in Model.Packages)
                    {
                        <option value="@package.TrackingID">@package.TrackingID</option>
                    }
                </select>
            </div>
        </div>
        <!--END of Packages form field -->
        <!-- START Submit button-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2 col-lg-1">
                <button type="submit" class="btn btn-primary">Release Package</button>
            </div>
            <div class="col-md-offset-1 col-md-2 col-lg-1">
                <button type="submit" class="btn btn-default">Cancel</button>
            </div>
        </div>
        <!-- END Submit button-->
        </div>
        }
